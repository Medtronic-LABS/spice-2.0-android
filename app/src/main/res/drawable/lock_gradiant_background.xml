<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color or transparent if needed -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

    <!-- Gradient border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#00000000"> <!-- Transparent stroke to avoid overlay -->
            </stroke>
            <gradient
                android:angle="180"
                android:startColor="#9193EE"
                android:centerColor="#EB956A"
                android:endColor="#FDCAB1"
                android:type="linear" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

</layer-list>