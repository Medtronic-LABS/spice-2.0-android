<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_agpar_header">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeaderOne"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:textAllCaps="true"
        style="@style/Form_Header_Style_title"
        android:text="INDICATOR"
        android:gravity="start"
        android:paddingStart="@dimen/_32sdp"
        android:background="@drawable/rect_gray_right_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvHeaderTwo"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeaderTwo"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:textAllCaps="true"
        style="@style/Form_Header_Style_title"
        android:background="@drawable/rect_gray_right_border"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvHeaderThree"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tvHeaderOne"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeaderThree"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:textAllCaps="true"
        style="@style/Form_Header_Style_title"
        android:background="@drawable/rect_gray_right_border"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvHeaderFour"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tvHeaderTwo"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeaderFour"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:textAllCaps="true"
        style="@style/Form_Header_Style_title"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tvHeaderThree"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>