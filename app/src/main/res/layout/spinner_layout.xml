<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_16sdp"
    android:paddingVertical="@dimen/_12sdp">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Form_Label_Style"
        android:paddingStart="@dimen/_0dp"
        android:paddingEnd="@dimen/_10sdp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/etUserInput"
        style="@style/Form_Input_Style_BG"
        android:layout_marginVertical="@dimen/_8sdp"
        android:drawableEnd="@drawable/ic_spinner_arrow_down"
        android:hint="@string/please_select"
        android:textColorHint="@color/secondary_black"
        android:padding="@dimen/_8sdp"/>

    <TextView
        android:id="@+id/tvErrorMessage"
        style="@style/TextStyle_Error_14"
        android:visibility="gone" />

</LinearLayout>